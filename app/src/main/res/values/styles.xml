<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/roboto_family</item>
        <item name="android:ambientShadowAlpha">0.15</item>
        <item name="android:spotShadowAlpha">0.15</item>

        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#353546</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:layout_height">100dp</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">#FFFFFF</item>

    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>


    <style name="CustomAlertDialog" parent="@style/Theme.MaterialComponents.Light.Dialog">
        <item name="dialogCornerRadius">5dp</item>
        <item name="colorPrimary">@color/b1</item>
        <item name="textAppearanceButton">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/barlow_semi_condensed_semibold</item>
    </style>

    <style name="BarlowNavigation" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/r_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15sp</item>
    </style>

</resources>
