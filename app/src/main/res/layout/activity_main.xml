<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:gravity="center"


        android:layout_gravity="center"
        android:foregroundGravity="center"

        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_icon1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="25sp"
            android:gravity="center"/>
    </androidx.appcompat.widget.Toolbar>
    <in.ajna.ajnamobile.ajna.SwipeButton
        android:id="@+id/btnSwipe"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar1"
        android:translationZ="10dp">

    </in.ajna.ajnamobile.ajna.SwipeButton>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/btnSwipe"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/fragmentContainerExpanded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true">
                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"


                    android:clipChildren="false"
                    android:clipToPadding="false">
                    ​<FrameLayout
                    android:id="@+id/cell_content_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/fragmentContainerMyFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center">

                    </RelativeLayout>
                </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cell_title_view3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <RelativeLayout
                            android:id="@+id/fragmentContainerMyFamily2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center">
                        </RelativeLayout>
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>



                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:folding-cell="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/folding_cell"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_below="@id/folding_cell3"
                    android:layout_marginBottom="10dp"


                    folding-cell:backSideColor="#ffdfc9">

                    <FrameLayout
                        android:id="@+id/cell_content_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <RelativeLayout
                            android:id="@+id/fragmentContainerMyImmediateContacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"></RelativeLayout>
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cell_title_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/fragmentContainerMyImmediateContacts3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center">

                        </RelativeLayout>
                    </FrameLayout>
                </com.ramotion.foldingcell.FoldingCell>

                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_below="@id/folding_cell"
                    android:layout_marginBottom="10dp"


                    android:clipChildren="false"
                    android:clipToPadding="false">
                    ​<FrameLayout
                    android:id="@+id/cell_content_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/fragmentContainerRecentMessages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center">

                    </RelativeLayout>
                </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cell_title_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/fragmentContainerRecentMessages2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center">
                        </RelativeLayout>
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabExpand1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/folding_cell"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"


                    android:src="@drawable/ic_flip"
                    app:maxImageSize="20dp"

                    app:backgroundTint="#ea5656"
                    app:elevation="0dp"
                    app:fabCustomSize="25dp"
                    android:onClick="expandImmediateContacts"/>

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabExpand2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@id/folding_cell2"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="10dp"

                    android:src="@drawable/ic_flip"
                    app:maxImageSize="20dp"

                    app:backgroundTint="#6C4D8C"
                    app:fabCustomSize="25dp"
                    app:elevation="0dp"
                    android:onClick="expandRecentMessages"/>

            </RelativeLayout>


        </ScrollView>





    </RelativeLayout>
</RelativeLayout>



