<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        app:title="Ajna"
        app:titleTextColor="@android:color/black"
        android:translationZ="1dp"
        android:gravity="center"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <in.ajna.ajnamobile.ajna.SwipeButton
        android:id="@+id/btnSwipe"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar1"
        android:translationZ="10dp"
        android:visibility="gone">


    </in.ajna.ajnamobile.ajna.SwipeButton>

    <com.suke.widget.SwitchButton
        android:id="@+id/btnSwitch"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/toolbar1"

        app:sb_shadow_radius="7dp"
        app:sb_shadow_offset="2dp"
        app:sb_shadow_effect="true"


        app:sb_show_indicator="false"

        app:sb_background="@color/c9"

        app:sb_checked_color="@color/c5"

        android:visibility="gone"

        />

    <LinearLayout
        android:id="@+id/layoutCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/btnSwitch"
        android:layout_centerHorizontal="true"

        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Arming the device in "
            android:layout_marginEnd="-5dp"

            android:layout_gravity="center_vertical"
            android:layout_toStartOf="@id/tvCountdown"

            android:textColor="@android:color/black"

            />

        <com.alexfu.countdownview.CountDownView
            android:id="@+id/tvCountdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            app:startDuration="80000"

            android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Headline6"

            android:textSize="20dp"

            />
    </LinearLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:layout_below="@id/layoutCountdown"



        android:layout_marginBottom="10dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/fragmentContainerExpanded"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true">
                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="10dp"


                    android:clipChildren="false"
                    android:clipToPadding="false">
                    ​<FrameLayout
                    android:id="@+id/cell_content_view3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/fragmentContainerMyFamily"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center">

                    </RelativeLayout>
                </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cell_title_view3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        >
                        <RelativeLayout
                            android:id="@+id/fragmentContainerMyFamily2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center">
                        </RelativeLayout>
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>
                        <RelativeLayout
                            android:id="@+id/fragmentContainerMyImmediateContacts"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:layout_below="@id/folding_cell3">

                        </RelativeLayout>
                <com.ramotion.foldingcell.FoldingCell xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/folding_cell2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    android:layout_below="@id/fragmentContainerMyImmediateContacts"
                    android:layout_marginBottom="10dp"


                    android:clipChildren="false"
                    android:clipToPadding="false">
                    ​<FrameLayout
                    android:id="@+id/cell_content_view2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:visibility="gone">

                    <RelativeLayout
                        android:id="@+id/fragmentContainerRecentMessages"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center">

                    </RelativeLayout>
                </FrameLayout>

                    <FrameLayout
                        android:id="@+id/cell_title_view2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:id="@+id/fragmentContainerRecentMessages2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center">
                        </RelativeLayout>
                    </FrameLayout>
                    ​
                </com.ramotion.foldingcell.FoldingCell>

            </RelativeLayout>


        </ScrollView>

    </RelativeLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"

        app:itemHorizontalTranslationEnabled="true"

        app:itemIconTint="@drawable/item_selected"
        app:itemTextColor="@drawable/item_selected"
        app:menu="@menu/bottom_navigation_menu"

        app:elevation="0.5dp"

        />

</RelativeLayout>



