<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.ManualCodeEntryActivity">

    <TextView
        android:id="@+id/tvCannotScanQRCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:gravity="center"

        android:fontFamily="@font/r_bold"
        android:text="Cannot scan QR Code?"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_centerHorizontal="true"
        android:layout_below="@id/tvCannotScanQRCode"

        android:layout_marginTop="10dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"

        android:gravity="center"

        android:textSize="14sp"
        android:fontFamily="@font/sf_cd_semibold"
        android:text="Please enter the device code which can be seen below the QR code."/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"
        android:layout_above="@id/btnProceed"
        android:layout_marginBottom="10dp">
        <com.infideap.blockedittext.BlockEditText
            android:id="@+id/etBlocks"
            android:layout_width="270dp"
            android:layout_height="wrap_content"

            android:layout_toEndOf="@+id/tvAjna"

            app:bet_numberOfBlock="3"
            app:bet_inputType="Integer"
            app:bet_defaultLength="2"

            app:bet_separatorCharacter="-"
            app:bet_separatorTextSize="10sp"

            app:bet_editTextBackground="@drawable/rounded_rectangle"/>

        <TextView
            android:id="@+id/tvAjna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"


            android:layout_marginStart="0dp"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/sf_cd_medium"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:text="AJNA-"
            android:textSize="20sp" />

    </RelativeLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnProceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"

        android:layout_centerInParent="true"
        android:text="Proceed"
        android:fontFamily="@font/r_bold"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:background="@drawable/button_rectangle"

        android:padding="15dp"
        android:onClick="goToHomePage"/>


</RelativeLayout>