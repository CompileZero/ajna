<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Delete history?"

        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/r_regular"
        android:textSize="16sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/label3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="20dp"

        android:layout_below="@id/label1"
        android:text="This action is irreversible and will delete all the past messages."
        android:fontFamily="@font/r_bold"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"


        android:layout_marginEnd="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/label3"
        android:fontFamily="@font/r_regular"
        android:text="This action may take a few seconds"
        android:textColor="@color/black"
        android:textSize="16sp"/>

</RelativeLayout>