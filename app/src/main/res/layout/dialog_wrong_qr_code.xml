<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/ic_no_internet"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"
        android:src="@drawable/qr_error" />

    <TextView
        android:id="@+id/tvOop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ic_no_internet"

        android:layout_centerHorizontal="true"

        android:fontFamily="@font/r_bold"
        android:text="Invalid QR Code!"
        android:textColor="@android:color/black"

        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/tvOop"
        android:layout_centerHorizontal="true"

        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"

        android:gravity="center"
        android:text="This QR Code seems to be invalid. Please try again."

        android:textSize="15sp" />
</RelativeLayout>