<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"

    android:layout_gravity="center_horizontal"


    android:background="@drawable/round_gradient4"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".RecentMessages.RecentMessagesFragmentCollapsed">



    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"



        android:textSize="25sp"
        android:text="RECENT MESSAGES"
        android:fontFamily="@font/barlow_semi_condensed_bold"

        android:textColor="#FFFFFF"
        />
    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:textSize="20sp"
        android:textColor="@color/c2"
        android:text="Time"
        android:fontFamily="@font/barlow_semi_condensed_semibold"
        android:layout_below="@id/tv3"/>
    <TextView
        android:id="@+id/tvRecentMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:text="Message"
        android:layout_below="@id/tvTime"/>






</RelativeLayout>