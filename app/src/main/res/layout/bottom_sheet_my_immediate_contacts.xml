<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


        <TextView
            android:id="@+id/tvMyImmediateContacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Immediate Contacts"

            android:layout_marginStart="15dp"
            android:layout_marginBottom="7dp"

            android:fontFamily="@font/r_bold"
            android:textColor="#3c3c3c"
            android:textSize="19sp"/>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"
            android:layout_below="@id/tvMyImmediateContacts"/>

        <TextView
            android:id="@+id/tvDetails2"
            android:layout_below="@+id/line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"

            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/r_medium"
            android:text="Details"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMyImmediateContactsExpanded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            android:layout_centerHorizontal="true"


            android:layout_below="@id/tvDetails2"

            android:layout_marginBottom="5dp"

            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:reverseLayout="false"
            tools:listitem="@layout/my_immediate_contacts_list_item_expanded"
            />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnExpandAddImmediateContact"
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:layout_below="@id/rvMyImmediateContactsExpanded"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"

            android:text="Add a contact"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:fontFamily="@font/r_bold"
            android:textColor="#952844"

            app:cornerRadius="100dp"
            android:backgroundTint="#FFBABA"


            />

    <RelativeLayout
        android:id="@+id/layoutAddContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/btnExpandAddImmediateContact"

        android:visibility="gone">
        <TextView
            android:id="@+id/tvAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Add a new contact"

            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:layout_below="@id/line2"

            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/r_medium"/>
        <View
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#8c8c8c"


            />
        <LinearLayout
            android:id="@+id/layout_full_name_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_below="@id/tvAdd"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Full name"
                android:fontFamily="@font/r_medium"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:text="-"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <EditText
                android:id="@+id/etImmediateContactFullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="20dp"
                android:layout_gravity="center"

                android:background="@drawable/edit_text_background"


                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:inputType="textCapWords|textPersonName"


                android:fontFamily="@font/r_medium"
                android:textSize="20sp"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@id/layout_full_name_bottom_sheet"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="PHONE NUMBER"
            android:fontFamily="@font/sf_cd_medium"
            android:textColor="@color/g1"/>

        <LinearLayout
            android:id="@+id/layout_edit_text_phone_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:layout_above="@id/btnLogin"
            android:layout_marginBottom="5dp"

            android:layout_below="@id/tvPhone"

            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="+91"
                android:fontFamily="@font/r_medium"
                android:textColor="@android:color/black"
                android:textSize="15sp"
                android:background="@drawable/edit_text_background"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"

                android:text="-"
                android:textSize="20sp"
                android:textColor="@android:color/black"/>
            <EditText
                android:id="@+id/etImmediateContactPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginEnd="20dp"
                android:layout_gravity="center"

                android:background="@drawable/edit_text_background"


                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:inputType="phone"
                android:maxLength="10"

                android:fontFamily="@font/r_medium"
                android:textSize="20sp"
                />

        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAddImmediateContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="15dp"
            android:layout_below="@id/layout_edit_text_phone_bottom_sheet"

            android:text="Add contact"
            android:fontFamily="@font/r_bold"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_rectangle2"

            android:padding="15dp"/>
    </RelativeLayout>


</RelativeLayout>