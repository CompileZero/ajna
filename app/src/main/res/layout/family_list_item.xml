<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="170dp"

        android:layout_margin="6dp"
        app:cardElevation="3dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/white"
        app:cardPreventCornerOverlap="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/round_gradient2" />

            <TextView
                android:id="@+id/tvFamilyMemberInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:text="AK"
                android:fontFamily="@font/barlow_semi_condensed_bold"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textAllCaps="true"/>
            <TextView
                android:id="@+id/tvFamilyMemberName"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_marginStart="5dp"
                android:layout_alignBottom="@id/view1"
                android:text="Atharva Kulkarni"
                android:textColor="@color/white"
                android:fontFamily="@font/r_bold"/>
            <TextView
                android:id="@+id/tvFamilyMemberPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:layout_below="@id/view1"
                android:text="+919766760151"
                android:fontFamily="@font/r_bold"
                android:textSize="12sp"
                android:textColor="#454545"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>