<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Login.VerifyPhoneActivity">

    <TextView
        android:id="@+id/tvVerificationCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerHorizontal="true"

        android:gravity="center"

        android:fontFamily="@font/bc_bold"
        android:text="Verification Code"
        android:textColor="@android:color/black"
        android:textSize="40sp"/>
<TextView
    android:id="@+id/tvInfo"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"


    android:layout_centerHorizontal="true"
    android:layout_below="@id/tvVerificationCode"

    android:layout_marginTop="10dp"
    android:layout_marginStart="40dp"
    android:layout_marginEnd="40dp"

    android:gravity="center"

    android:textSize="14sp"
    android:fontFamily="@font/barlow_semi_condensed_bold"
    android:text="We have sent you a verification code. \nThe verification process happens automatically.\nIf nothing happens in the next minute, please enter the OTP manually and click Verify"/>
    <com.mukesh.OtpView
        android:id="@+id/otpView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/OtpWidget.OtpView"

        app:itemRadius="8dp"
        android:inputType="number"
        android:textColor="@android:color/white"

        android:itemBackground="@color/c10"
        android:focusedByDefault="true"
        android:textSize="30sp"
        android:layout_centerInParent="true"
        android:fontFamily="@font/barlow_semi_condensed_bold"
        app:itemCount="6"/>

    <com.marozzi.roundbutton.RoundButton
        android:id="@+id/btnVerify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_below="@id/otpView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"

        app:rb_animation_progress_style="circle"
        app:rb_animation_corner_radius="20dp"
        app:rb_animation_duration="500"

        android:text="Verify"


        app:rb_background_color="@color/colorPrimaryDark"
        app:rb_text_color="@android:color/white"
        app:rb_corner_radius="100dp"/>


</RelativeLayout>